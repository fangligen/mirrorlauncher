    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
  <ImageView
      android:id="@+id/view_map_marker_img"
      android:layout_width="@dimen/dp_58"
      android:layout_height="@dimen/dp_64"
      android:src="@mipmap/icon_map_dot1"
      />
