<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"

    >
    <RelativeLayout
            android:id="@+id/more_recyclerview_item_root"
            android:layout_width="wrap_content"
            android:background="@mipmap/img_bg3"
            android:layout_height="349px">

        <com.shouqiev.mirror.launcher.GofunViews.MirrorImageView
                android:id="@+id/more_recyclerview_item_icon"
                android:layout_width="100px"
                android:layout_height="180px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40px"
                android:src="@drawable/home_more_ic_account"/>

        <ImageView
                android:id="@+id/more_recyclerview_item_delete"
                android:src="@drawable/ic_delete"
                android:layout_width="40px"
                android:layout_height="40px"
                android:background="#9a9a9a"
                android:layout_alignParentRight="true"
                android:visibility="gone"
            />

        <TextView
                android:id="@+id/more_recyclerview_item_title"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:textColor="@color/next_font"
                android:gravity="center"
                android:layout_marginBottom="26px"
                android:layout_alignParentBottom="true"
                android:lines="1"
                android:textSize="26px"
                />
    </RelativeLayout>
</RelativeLayout>