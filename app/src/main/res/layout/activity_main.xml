<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_640"
    android:layout_height="@dimen/dp_200"
    android:background="@color/tools_bg_color"
    android:orientation="horizontal"
    >
  <SurfaceView
      android:layout_width="0px"
      android:layout_height="0px"
      android:visibility="gone"/>
  <RelativeLayout
      android:id="@+id/main_layout_status_bar"
      android:layout_width="140px"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="104px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/main_imgv_home"
          android:layout_width="100px"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="22px"
          android:src="@mipmap/home_pressed"
          />
      <ImageView
          android:id="@+id/main_imgv_nav"
          android:layout_width="100px"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="22px"
          android:src="@mipmap/nav_default"
          />
      <ImageView
          android:id="@+id/main_imgv_car"
          android:layout_width="100px"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="22px"
          android:src="@mipmap/icon_car_default"
          />
      <ImageView
          android:id="@+id/main_imgv_more"
          android:layout_width="100px"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:padding="22px"
          android:src="@mipmap/more_default"
          />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="42px"
        android:layout_height="match_parent"
        android:background="@mipmap/home_voice_img"
        >
      <ImageView
          android:id="@+id/main_icon_voice"
          android:layout_width="match_parent"
          android:layout_height="57px"
          android:padding="7px"
          android:src="@mipmap/icon_voice"
          android:layout_centerInParent="true"
          />

    </RelativeLayout>


  </RelativeLayout>
  <FrameLayout
      android:id="@+id/main_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="146px"
      >
  </FrameLayout>


</RelativeLayout>
