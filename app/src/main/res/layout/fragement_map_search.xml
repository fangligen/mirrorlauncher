<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_25"
    android:paddingRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_25"
    >
  <RelativeLayout
      android:layout_width="@dimen/dp_562"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <TextView
        android:id="@+id/fragment_map_search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_38"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_map_search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_map_search_title"
        android:layout_marginTop="-12dp"
        android:background="@android:color/transparent"
        />
    <RelativeLayout
        android:id="@+id/fragment_map_search_viewpager_index"
        android:layout_width="@dimen/dp_370"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
      <Button
          android:id="@+id/fragment_map_search_pre_btn"
          android:layout_width="@dimen/dp_25"
          android:layout_height="@dimen/dp_46"
          android:layout_alignParentLeft="true"
          android:background="@drawable/selector_search_result_prepage"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/fragment_map_search_viewpage_index"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/dp_46"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/dp_46"
          android:layout_marginRight="@dimen/dp_46"
          />
      <Button
          android:id="@+id/fragment_map_search_next_btn"
          android:layout_width="@dimen/dp_25"
          android:layout_height="@dimen/dp_46"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@drawable/selector_search_result_nextpage"
          />
    </RelativeLayout>
  </RelativeLayout>

  <android.support.v7.widget.CardView
      android:layout_width="@dimen/dp_490"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp_25"
      card_view:cardCornerRadius="@dimen/dp_8"
      >
    <com.amap.api.maps.TextureMapView
        android:id="@+id/fragment_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
  </android.support.v7.widget.CardView>

</LinearLayout>