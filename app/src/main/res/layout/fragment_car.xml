<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/base_main_color"
    android:paddingBottom="@dimen/dp_21"
    android:paddingTop="@dimen/dp_21">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/dp_23">

    <TextView
        android:id="@+id/total_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        android:text="车辆教程（1/20）"/>

    <com.shouqiev.mirror.launcher.GofunViews.FeatureCoverFlow
        android:layout_below="@+id/total_tutorial"
        android:id="@+id/coverflow"
        android:layout_width="@dimen/dp_562"
        android:layout_height="match_parent"
        coverflow:coverHeight="@dimen/cover_height"
        coverflow:coverWidth="@dimen/cover_width"
        coverflow:maxScaleFactor="1.2"
        coverflow:reflectionGap="0px"
        coverflow:rotationThreshold="0.1"
        coverflow:reflectionOpacity="40"
        coverflow:scalingThreshold="0.2"
        coverflow:spacing="0.3">
    </com.shouqiev.mirror.launcher.GofunViews.FeatureCoverFlow>
  </RelativeLayout>



  <!--mCoverHeight-->
  <!--mSpacing-->
  <!--mRotationThreshold-->
  <!--mScalingThreshold-->
  <!--mAdjustPositionThreshold-->
  <!--mAdjustPositionMultiplier-->
  <!--mMaxRotationAngle-->
  <!--mMaxScaleFactor-->
  <!--mRadius-->
  <!--mRadiusInMatrixSpace-->
  <!--mReflectionHeight-->
  <!--mReflectionGap-->
  <!--mReflectionOpacity-->
  <!--mTuningWidgetSize-->
  <!--mAlignTime-->
  <!--mPaddingTop-->
  <!--mPaddingBottom-->
  <!--mReflectionBackgroundColor-->

  <RelativeLayout
      android:layout_width="@dimen/dp_500"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:padding="@dimen/dp_8"
      android:background="@drawable/tutorial_card_info_bg">

    <ImageView
        android:id="@+id/car_info_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/car_info"
        android:layout_marginTop="@dimen/dp_12"
        android:scaleType="centerInside"
        android:src="@drawable/gofun_car_type_eq"
        />

    <TextView
        android:id="@+id/car_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_30"
        android:text="奇瑞 艾瑞泽 5E"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_above="@+id/car_detail"/>


    <LinearLayout
        android:id="@+id/car_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_above="@+id/bottom_bg">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
      <RelativeLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/seat_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/tutorial_detail_bg"
            android:text="5座"/>
      </RelativeLayout>

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/engine_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/tutorial_detail_bg"
            android:text="电动"/>
      </RelativeLayout>



    </LinearLayout>
  </RelativeLayout>

</LinearLayout>
