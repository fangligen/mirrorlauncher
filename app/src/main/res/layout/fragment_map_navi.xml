<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_main_color"
    android:orientation="horizontal"
    android:padding="@dimen/dp_25"
    >
  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      card_view:cardCornerRadius="@dimen/dp_8"
      >
    <LinearLayout
        android:id="@+id/fragment_navi_info_lay"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_370"
        android:background="@drawable/bg_map_poi_list"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginBottom="@dimen/dp_28"
          android:layout_marginTop="@dimen/dp_28"
          android:gravity="center_horizontal"
          android:orientation="vertical"
          >
        <com.shouqiev.mirror.launcher.fragment.map.widget.NextTurnTipView
            android:id="@+id/fragment_map_navi_next_icon"
            android:layout_width="@dimen/dp_134"
            android:layout_height="@dimen/dp_134"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_weight="1"
            android:scaleType="centerInside"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_32"
            android:orientation="horizontal"
            >

          <TextView
              android:id="@+id/fragment_map_navi_next_dis"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="100米"
              android:textColor="@color/white"
              android:textSize="@dimen/sp_32"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/dp_20"
              android:text="进入"
              android:textColor="#ababaf"
              android:textSize="@dimen/sp_32"
              />
        </LinearLayout>
        <TextView
            android:id="@+id/fragment_map_navi_next_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_32"
            android:text="枣营北路"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_32"
            />
      </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/dp_25"
      android:layout_weight="1"
      card_view:cardCornerRadius="@dimen/dp_8"
      >
    <RelativeLayout
        android:id="@+id/fragment_map_navi_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <com.amap.api.navi.AMapNaviView
          android:id="@+id/fragment_map_navi_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
      <RelativeLayout
          android:id="@+id/fragment_map_navi_info_lay"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_100"
          android:layout_alignParentBottom="true"
          android:background="@android:color/white"
          android:padding="@dimen/dp_12"
          >
        <Button
            android:id="@+id/fragment_map_navi_stop_btn"
            android:layout_width="65dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_home_start_navi"
            android:text="@string/btn_stop_navi"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_30"
            />

        <LinearLayout
            android:id="@+id/fragment_map_route_des_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/fragment_map_navi_stop_btn"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
          <TextView
              android:id="@+id/fragment_map_navi_arrive_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/darker_gray"
              android:textSize="@dimen/sp_24"
              />
        </LinearLayout>
      </RelativeLayout>
      <ImageView
          android:id="@+id/fragment_map_navi_cross_img"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="fitXY"
          />
      <com.baidu.lbsapi.panoramaview.PanoramaView
          android:id="@+id/panorama"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:clickable="true"
          />
      <ImageView
          android:id="@+id/fragment_navi_close_panorama"
          android:layout_width="@dimen/dp_64"
          android:layout_height="@dimen/dp_64"
          android:background="@color/color_bg"
          android:scaleType="centerInside"
          android:layout_margin="@dimen/dp_10"
          android:src="@mipmap/close"
          />
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>